            <h1>Good Sip for Good Moments</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <% @cocktails.each do |cocktail| %>
                <div class="card">
            
                </div>
                    <%= link_to cocktail.name, cocktail_path(cocktail) %>

                <div class="card-item">
                </div>
            <% end %>
        </div>
    </div>

</div>
